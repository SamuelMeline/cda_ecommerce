{% extends 'base.html.twig' %}

{% block title %}Categories index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des categories</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
						<td>
							<div class="flex">
								<a class="btn btn-info" href="{{ path('app_categories_show', {'id': category.id}) }}">Voir</a>
								<a class="btn btn-warning" href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>
								{{ include('categories/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-success" href="{{ path('app_categories_new') }}">Créer une nouvelle catégorie</a>
		<!-- Retour a la home -->
		<a class="btn btn-secondary" href="{{ path('app_home') }}">Retour à l'accueil</a>
	</div>
{% endblock %}
