{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Categories</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ category.name }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary mb-3" href="{{ path('app_categories_index') }}">Retour a la liste</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>

		{{ include('categories/_delete_form.html.twig') }}
	</div>
{% endblock %}
