{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-warning">Commentaires</h2>

		{{ form_start(form, {'attr' : { 'class': 'comments' }, 'action': path('app_comments_produit', {'id': produit.id}), 'method': 'POST'}) }}
		{{ form_row(form.name) }}
		{{ form_row(form.content) }}
		{{ form_row(form._token) }}
		<button type="submit" class="btn btn-primary">Envoyer le commentaire</button>
		<a class="btn btn-secondary" href="{{ path('app_produits_index') }}">Retour a la liste</a>
		{{ form_end(form) }}

		<div id="comment-parent" class="shadow rounded mt-3 p-3 text-warning list-group">
			{% for commentaire in produit.commentaire %}

				<h3 class="text-warning">Pseudo :
					{{commentaire.name}}</h3>
				<p>Message :
					{{commentaire.content}}
				</p>
				<p>
					Date :
					{{commentaire.createdAt|date('d/m/Y H:i:s')}}
				</p>

			{% endfor %}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/commentaire.js') }}" type="application/javascript"></script>
{% endblock %}
