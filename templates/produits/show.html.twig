{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Produits</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ produit.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ produit.description }}</td>
				</tr>
				<tr>
					<th>Images</th>
					<td>
						<div>
							<div id="carouselExampleAutoplaying{{ produit.id }}" class="carousel slide" data-bs-ride="carousel">
								<div class="carousel-inner">
									{% for image in produit.photos %}
										<div class="carousel-item {% if loop.first %}active{% endif %}">
											<img src="{{ asset('uploads/images/' ~ image.name) }}" class="d-block w-50" alt="{{ produit.name }}">
										</div>
									{% endfor %}
								</div>
								<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying{{ produit.id }}" data-bs-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Previous</span>
								</button>
								<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying{{ produit.id }}" data-bs-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Next</span>
								</button>
							</div>
							{% if produit.photos is empty %}
								<span>Aucune photo disponible</span>
							{% endif %}
							<hr>
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying{{ produit.id }}" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying{{ produit.id }}" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</button>
					</td>
				</tr>
			</tbody>
		</div>
	</td>
</tr>
<tr>
	<th>Price</th>
	<td>{{ produit.price }}</td>
</tr>
<tr>
	<th>Slug</th>
	<td>{{ produit.slug }}</td>
</tr>
<tr>
	<th>CreatedAt</th>
	<td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
</tr></tbody></table><a class="btn btn-success mb-3" href="{{ path('app_panier', {'id': produit.id}) }}">Ajouter au panier</a><a class="btn btn-secondary mb-3" href="{{ path('app_produits_index') }}">Retour Ã  la liste</a><a class="btn btn-warning mb-3" href="{{ path('app_produits_edit', {'id': produit.id}) }}">Modifier</a><a class="btn btn-warning mb-3" href="{{ path('app_comments_produit', {'id': produit.id}) }}">Voir les commentaires</a>{{ include('produits/_delete_form.html.twig') }}</div>{% endblock %}
