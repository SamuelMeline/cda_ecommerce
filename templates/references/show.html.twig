{% extends 'base.html.twig' %}

{% block title %}References
{% endblock %}

{% block body %}
	<div class="container">
		<h1>References</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ reference.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ reference.name }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary mb-3" href="{{ path('app_references_index') }}">Retour a la liste</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_references_edit', {'id': reference.id}) }}">Modifier</a>

		{{ include('references/_delete_form.html.twig') }}
	</div>
{% endblock %}
